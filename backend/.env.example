# FraudGuard Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Tavily API Key
TAVILY_API_KEY=

# Google AI Configuration (Required for Gemini)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-pro-vision
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000

# Sui Blockchain Configuration
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_WEBSOCKET_URL=wss://fullnode.testnet.sui.io:443

# Smart Contract Addresses (set after deployment)
MARKETPLACE_PACKAGE_ID=
NFT_MODULE_ADDRESS=
FRAUD_MODULE_ADDRESS=

# AI Agent Configuration
AI_AGENT_PRIVATE_KEY=
AI_AGENT_ADDRESS=

# Supabase Configuration (Optional)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_DB_URL=

# Fraud Detection Configuration
FRAUD_CONFIDENCE_THRESHOLD=0.6
IMAGE_SIMILARITY_THRESHOLD=0.85
MAX_NFTS_PER_WALLET_PER_HOUR=50

# Image Processing Configuration
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=["jpg","jpeg","png","gif","webp"]

# Monitoring and Logging
ENABLE_METRICS=true

PINATA_API_KEY=
PINATA_SECRET_API_KEY=
PINATA_JWT=

TAVILY_API_KEY=your_tavily_key_here